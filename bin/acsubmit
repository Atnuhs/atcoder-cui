#!/bin/bash
set -euo pipefail
trap 'echo "ERROR: line no = $LINENO, exit status = $?" >&2; exit 1' ERR

ROOT="$(cd $(dirname $0)/.. && pwd)"
source "${ROOT}/bin/.env"

PROBLEM=$1

mkdir -p "${PWD}/submit"
FILE_SRC="${PWD}/submit/main.go"
(
    cd "${PWD}/solve"
    gottani . 
) > "${FILE_SRC}"

cd "${ROOT}/problems/${CONTESTNAME}/${PROBLEM}"
acc submit "${FILE_SRC}" 
