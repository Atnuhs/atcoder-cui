#!/bin/bash
set -euo pipefail
trap 'echo "ERROR: line no = $LINENO, exit status = $?" >&2; exit 1' ERR

ROOT="$(cd $(dirname $0)/.. && pwd)"
source "${ROOT}/bin/.env"

PROBLEM=$1
mkdir -p "${PWD}/submit"

(
    cd "${PWD}/solve"
    gottani . 
) > "${PWD}/submit/main.go"


oj t -c "go run ${PWD}/submit/main.go" -d ${PWD}/problems/${CONTESTNAME}/${PROBLEM}/tests -S

